name: Claude PR Review

on:
  pull_request:
    types:
{%- for event in claude.trigger.on %}
      - {{ event }}
{%- endfor %}
{%- if claude.trigger.labels %}
    labels:
{%- for label in claude.trigger.labels %}
      - {{ label }}
{%- endfor %}
{%- endif %}

jobs:
  claude-review:
    runs-on: ubuntu-latest
    permissions:
      pull-requests: write
      contents: read
      id-token: write
      actions: read
    
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
      
      - name: Validate Environment
        run: |
          {% raw %}# Validate required secrets
          if [ -z "${{ secrets.ANTHROPIC_API_KEY }}" ]; then
            echo "❌ Error: ANTHROPIC_API_KEY secret not configured"
            echo "Please add ANTHROPIC_API_KEY to repository secrets:"
            echo "Settings → Secrets and variables → Actions → New repository secret"
            exit 1
          fi
          {% endraw %}
          
          # Validate prompt files exist
{% for prompt_file in claude.prompts %}
          if [ ! -f ".ritual-pr/prompts/{{ prompt_file }}" ]; then
            echo "❌ Error: Prompt file not found: .ritual-pr/prompts/{{ prompt_file }}"
            exit 1
          fi
{% endfor %}
          echo "✅ All validations passed"
      
      - name: Read Prompts
        id: prompts
        run: |
          PROMPT=""
{% for prompt_file in claude.prompts %}
          PROMPT+=$(cat .ritual-pr/prompts/{{ prompt_file }})
          PROMPT+=$'\n\n'
{% endfor %}
          {% raw %}
          echo "COMBINED_PROMPT<<EOF" >> $GITHUB_OUTPUT
          echo "$PROMPT" >> $GITHUB_OUTPUT
          echo "EOF" >> $GITHUB_OUTPUT
      
      - name: Run Claude Review
        uses: anthropics/claude-code-action@v1
        with:
          anthropic_api_key: ${{ secrets.ANTHROPIC_API_KEY }}
          track_progress: true
          prompt: |
            REPO: ${{ github.repository }}
            PR NUMBER: ${{ github.event.pull_request.number }}
            
            ${{ steps.prompts.outputs.COMBINED_PROMPT }}
            
            ## Review Instructions
            
            1. **First, check existing reviews:** Use `gh pr view ${{ github.event.pull_request.number }} --comments` to read all existing PR comments
            2. **Check if you've already reviewed:** Look for comments from "claude" or "github-actions"
            3. **If you've already reviewed this PR:**
               - Read your previous review(s) carefully
               - Check if the issues you identified have been addressed
               - Focus on NEW changes since your last review
               - Update or supplement your previous feedback rather than repeating it
               - Mention which previous issues were fixed and which remain
            4. **If this is your first review:** Provide comprehensive feedback
            5. **Always:** Use `gh pr comment` for top-level observations
            6. **Always:** Use `mcp__github_inline_comment__create_inline_comment` to highlight specific code issues
            7. **Always:** Post your review as GitHub comments on the PR
          claude_args: |
            --allowedTools "mcp__github_inline_comment__create_inline_comment,Bash(gh pr comment:*),Bash(gh pr diff:*),Bash(gh pr view:*)"
          {% endraw %}
