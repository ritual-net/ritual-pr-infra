name: Claude PR Review

on:
  pull_request:
    types:
{%- for event in claude.trigger.on %}
      - {{ event }}
{%- endfor %}
{%- if claude.trigger.labels %}
    labels:
{%- for label in claude.trigger.labels %}
      - {{ label }}
{%- endfor %}
{%- endif %}

jobs:
  claude-review:
    runs-on: ubuntu-latest
    permissions:
      pull-requests: write
      contents: read
      id-token: write
      actions: read
    
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
      
      - name: Read Prompts
        id: prompts
        run: |
          PROMPT=""
{% for prompt_file in claude.prompts %}
          PROMPT+=$(cat .ritual-pr/prompts/{{ prompt_file }})
          PROMPT+=$'\n\n'
{% endfor %}
          {% raw %}
          echo "COMBINED_PROMPT<<EOF" >> $GITHUB_OUTPUT
          echo "$PROMPT" >> $GITHUB_OUTPUT
          echo "EOF" >> $GITHUB_OUTPUT
      
      - name: Run Claude Review
        uses: anthropics/claude-code-action@v1
        with:
          anthropic_api_key: ${{ secrets.ANTHROPIC_API_KEY }}
          track_progress: true
          prompt: |
            REPO: ${{ github.repository }}
            PR NUMBER: ${{ github.event.pull_request.number }}
            
            ${{ steps.prompts.outputs.COMBINED_PROMPT }}
            
            Review this pull request and provide detailed feedback.
            Use `gh pr comment` for top-level observations.
            Use `mcp__github_inline_comment__create_inline_comment` to highlight specific code issues.
            Post your review as GitHub comments on the PR.
          claude_args: |
            --allowedTools "mcp__github_inline_comment__create_inline_comment,Bash(gh pr comment:*),Bash(gh pr diff:*),Bash(gh pr view:*)"
          {% endraw %}

